generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(EMPLOYEE)
  createdAt DateTime @default(now())
  records   Record[]
}

model Target {
  id        Int      @id @default(autoincrement())
  yearMonth String   // formato YYYY-MM
  day       Int      // dia do mÃªs (1..31)
  value     Float
  createdAt DateTime @default(now())
}

model Record {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  date      DateTime
  value     Float
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  EMPLOYEE
}
